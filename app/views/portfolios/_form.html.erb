<%= form_for(portfolio_item) do |form| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label class="btn btn-outline-dark">
      Upload main image<%= form.file_field :main_image, style: 'display:none;' %>
      </label>
    </div>

    <div class="form-group">
      <label class="btn btn-outline-dark">
        Upload thumb image<%= form.file_field :thumb_image, style: 'display:none;' %>
      </label>
    </div>

    <hr>
    <div>
      <label><strong>Technologies Used:</strong></label>
      <%= form.fields_for :technologies do |technology_form| %>
      <div class='form-group'>
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name, class: 'form-control' %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control', rows: 18 %>
    </div>

  </div>
</div>

<div class="form-group">
  <%= form.submit 'Save Entry', class: 'btn btn-outline-dark' %>
</div>
<% end %>