<%= form_for(portfolio_item) do |f| %>
<% if portfolio_item.errors.any? %>
<% portfolio_item.errors.full_messages.each do |error| %>
<%= alert_generator error %>
<% end %>
<% end %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :blurb, 'A short description (limited to 110 characters)' %>
      <%= f.text_field :blurb, maxlength: 110, row: 2, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label class="btn btn-outline-dark">
        Upload <em>main</em> image<%= f.file_field :main_image, style: 'display:none;' %>
      </label>
    </div>

    <div class="form-group">
      <label class="btn btn-outline-dark">
        Upload <em>thumb</em> image<%= f.file_field :thumb_image, style: 'display:none;' %>
      </label>
    </div>

    <div class="form-group">
      <%= f.label :github_link, 'GitHub Link (limited to 110 characters)' %>
      <%= f.text_field :github_link, maxlength: 110, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :deployed_link, 'Deployed Link (limited to 110 characters)' %>
      <%= f.text_field :deployed_link, maxlength: 110, class: 'form-control' %>
    </div>

    <hr>
    <div>
      <label><strong>Technologies Used:</strong></label>
      <%= f.fields_for :technologies do |technology_form| %>
      <%= render 'technology_fields', f: technology_form %>
      <% end %>

      <div>
        <%= link_to_add_association 'Add Technology', f, :technologies %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: 18 %>
    </div>

  </div>
</div>

<div class="form-group">
  <%= f.submit 'Save Entry', class: 'btn btn-outline-dark' %>
</div>
<% end %>