<h1>Portfolio Items</h1>

<%= link_to "Create new item", new_portfolio_path %>

<% @portfolio_items.each do |item| %>
  <h2> <%= link_to item.title, portfolio_path(item)%> </h2>
  <p> <%= item.subtitle %> </p>
  <p> <%= item.body %> </p>
  <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(item) %> 
  <%= link_to "Delete Portfolio Item", portfolio_path(item), method: :delete, data: { confirm: "Are you sure, there is NO GOING BACK once an item is deleted."} %>
<% end %>