<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' %>
      <p class="px16spacer"><%= link_to "GitHub Link", "#{@portfolio_item.github_link}", class: "big_link" %></p>
      <p><%= @portfolio_item.deployed_link ? (link_to "Deployed Link", "#{@portfolio_item.deployed_link}", class: "big_link" ) : "" %></p>
    </div>
    <div class="col-md-5">
      <h1> <%= @portfolio_item.title %> </h1>
      <hr>
      <em> <%= @portfolio_item.subtitle %> </em>
      <p> <%= @portfolio_item.body %> </p>
      <h3>Technologies Used:</h3>
      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
      <% if logged_in?(:site_admin) %>
      <div>
        <%=link_to 'Edit Item', edit_portfolio_path(@portfolio_item), class: 'btn btn-outline-dark' %>
      </div>
      <% end %>
    </div>
  </div>
</div>