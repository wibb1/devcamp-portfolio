<% if logged_in? :site_admin %>
  <div class='btn-group mb-3'>
    <%= controller_name == 'blogs' ? button_helper(data_passed.status, data_passed) : "" %>
    <%= link_to fa_icon('edit', title: "Edit #{end_title}"), edit_path, class: 'btn btn-primary fa-2x' %>
    <%= link_to fa_icon('trash', title: "Delete #{end_title}"), data_passed, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: 'btn btn-danger fa-2x' %>
  </div>
<% end %>
