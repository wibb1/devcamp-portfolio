<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title.titleize, blog %></h2>
  <p class="blog-post-meta">
    Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago
  </p>
  <%= render partial: 'shared/admin_actions', locals: {blog: blog} %>
  <p><%= blog.blurb %></p>
  <hr>
  <p><%= markdown blog.body %></p>
</div>