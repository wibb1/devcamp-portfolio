<div class="col-md-8 blog-main">
  <h2><%= @topic.title %></h2>
  <p>
    <%= link_to 'Edit', edit_topic_path(@topic) if logged_in?(:site_admin) %> /
    <%= link_to 'Delete Topic', @topic, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
  <% @topic.blogs.each do |blog| %>
  <p><%= blog.title %></p>
  <% end %>

</div>